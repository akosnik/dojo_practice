<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <h1>Here are some delicious foods!!</h1>
  @{
    var FoodList = new List<string>
    {
      "Pizza",
      "Ice Cream",
      "Cinna-bon",
      "Waffles",
    };

    foreach(string food in FoodList)  
    {
      if(food.ToLower().StartsWith("c"))
      {
        <p style="color: red">@food</p>
      }
      else
      {
        <p>@food</p>
      }
    };
  }
</body>
</html>