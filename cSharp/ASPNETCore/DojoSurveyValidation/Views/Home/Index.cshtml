@model Survey

<div class="d-flex justify-content-center">
    <form class="d-flex flex-column w-25" asp-action="Create" asp-controller="Home" method="post">
        <h1 class="display-4 mx-auto">Welcome</h1>

        <div class="mb-3">
            <div class="d-flex justify-content-between">
                <label asp-for="Name"></label>
                <input asp-for="Name">
            </div>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <div class="mb-3">
            <div class="d-flex justify-content-between">
                <label asp-for="Location"></label>
                <select class="form-select w-50" aria-label="location select" id="formControlSelectLocation" name="Location">
                    <option value="chicago">Chicago</option>
                    <option value="honolulu">Honolulu</option>
                    <option value="seattle">Seattle</option>
                </select>
            </div>
            <span class="text-danger" asp-validation-for="Location"></span>
        </div>

        <div class="mb-3">
            <div class="d-flex justify-content-between">
                <label asp-for="Language"></label>
                <select class="form-select w-50" aria-label="language select" id="formControlSelectLanguage" name="Language">
                    <option value="csharp">C#</option>
                    <option value="csharp">C#</option>
                    <option value="csharp">C#</option>
                </select>
            </div>
            <span class="text-danger" asp-validation-for="Language"></span>
        </div>

        <div class="mb-3">
            <div class="d-flex justify-content-between">
                <label asp-for="Comment"></label>
                <textarea class="form-control" id="formControlTextarea" rows="5" name="Comment"></textarea>
            </div>
            <span class="text-danger" asp-validation-for="Comment"></span>
        </div>

        <div class="align-self-end mb-3"><button type="submit" class="btn btn-primary">Submit</button></div>
    </form>
</div>