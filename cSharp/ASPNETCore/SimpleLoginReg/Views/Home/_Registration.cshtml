@model Registration

<form class="d-flex flex-column" asp-action="Register" asp-controller="Home" method="post">
  <h1 class="display-4 mx-auto">Register</h1>

  <div class="mb-3">
    <div class="d-flex justify-content-between">
      <label asp-for="FirstName"></label>
      <input asp-for="FirstName">
    </div>
    <span class="text-danger" asp-validation-for="FirstName"></span>
  </div>

  <div class="mb-3">
    <div class="d-flex justify-content-between">
      <label asp-for="LastName"></label>
      <input asp-for="LastName">
    </div>
    <span class="text-danger" asp-validation-for="LastName"></span>
  </div>

  <div class="mb-3">
    <div class="d-flex justify-content-between">
      <label asp-for="Email"></label>
      <input asp-for="Email">
    </div>
    <span class="text-danger" asp-validation-for="Email"></span>
  </div>

  <div class="mb-3">
    <div class="d-flex justify-content-between">
      <label asp-for="Password"></label>
      <input asp-for="Password">
    </div>
    <span class="text-danger" asp-validation-for="Password"></span>
  </div>

  <div class="mb-3">
    <div class="d-flex justify-content-between">
      <label asp-for="ConfirmPass"></label>
      <input asp-for="ConfirmPass">
    </div>
    <span class="text-danger" asp-validation-for="ConfirmPass"></span>
  </div>

  <div class="align-self-end mb-3"><button type="submit" class="btn btn-primary">Submit</button></div>
</form>