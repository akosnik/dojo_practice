@model Category

<form class="col" asp-action="CreateCategory" asp-controller="Home" method="post">
  <h1 class="display-4 mx-auto">New Category</h1>

  <div class="mb-3" style="max-width: 15rem">
    <div class="d-flex flex-column">
      <label asp-for="Name"></label>
      <input asp-for="Name">
    </div>
    <span class="text-danger" asp-validation-for="Name"></span>
  </div>

  <div class="align-self-end mb-3"><button type="submit" class="btn btn-primary">Add Chef</button></div>
</form>