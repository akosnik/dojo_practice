@model LogUser

<form class="d-flex flex-column w-25 mx-auto" asp-action="Logging" asp-controller="Home" method="post">
  <h1 class="display-4 mx-auto">Login</h1>

  <div class="mb-3">
    <div class="d-flex flex-column">
      <label asp-for="LogEmail"></label>
      <input asp-for="LogEmail">
    </div>
    <span class="text-danger" asp-validation-for="LogEmail"></span>
  </div>

  <div class="mb-3">
    <div class="d-flex flex-column">
      <label asp-for="LogPassword"></label>
      <input asp-for="LogPassword">
    </div>
    <span class="text-danger" asp-validation-for="LogPassword"></span>
  </div>

  <div class="align-self-end mb-3"><button type="submit" class="btn btn-primary">Login</button></div>
</form>